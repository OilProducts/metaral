// Compute bucket counts (256 buckets) for one byte of the hash key.
#version 450
#include "fluid_common.glsl"

layout(local_size_x = 256, local_size_y = 1, local_size_z = 1) in;

layout(std430, binding = 2) buffer HashKeys { uint keys[]; };

void main() {
    uint i = gl_GlobalInvocationID.x;
    if (i >= params.numParticles) return;
    uint shift = params.aux0; // which byte (0,8,16,24)
    uint bucket = (keys[i] >> shift) & 0xFFu;
    atomicAdd(counts[bucket], 1u);
}
